<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.fragment.AccountFragment">

    <LinearLayout
        android:layout_marginTop="@dimen/spacing_v_2"
        android:layout_marginBottom="@dimen/spacing_v_2"
        android:layout_marginStart="@dimen/spacing_h_1"
        android:layout_marginEnd="@dimen/spacing_h_1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextTitle"
            android:id="@+id/iTitleText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/app_name" />

        <TextView
            style="@style/TextTips"
            android:id="@+id/iUserText"
            android:textColor="@color/colorText"
            android:layout_marginTop="@dimen/spacing_v_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/app_name" />

        <TextView
            style="@style/TextTips"
            android:id="@+id/iTimeText"
            android:textColor="@color/colorText"
            android:layout_marginTop="@dimen/spacing_v_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/app_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/spacing_v_1"
            android:layout_height="24dp">

            <TextView
                style="@style/TextTitle"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_middle"
                android:textStyle="bold"
                android:id="@+id/iScoreText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/app_name" />

            <Button
                android:id="@+id/iEditButton"
                style="@style/Button"
                android:textSize="@dimen/text_size_middle"
                android:textColor="@color/colorPrimary"
                android:background="@null"
                android:text="@string/app_edit"
                android:gravity="end|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:background="@color/split"
        android:layout_width="match_parent"
        android:layout_height="1px" />

</LinearLayout>
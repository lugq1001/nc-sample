<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_h_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_h_2"
        android:layout_marginEnd="@dimen/spacing_h_2"
        android:background="@drawable/bg_item_border"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_h_2"
        android:paddingTop="@dimen/spacing_v_2"
        android:paddingEnd="@dimen/spacing_h_2"
        android:paddingBottom="@dimen/spacing_v_2"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_v_2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/iTitleText"
                style="@style/TextTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iIconImage"
                style="@style/Icon"
                android:contentDescription="@null"
                android:src="@mipmap/ic_trans_ball" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_v_2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/iTimeText"
                style="@style/TextTips"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/iLocationText"
                style="@style/TextTips"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/spacing_v_2"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/iRemarkText"
                style="@style/TextTips"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/spacing_v_2"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/app_name" />


        </LinearLayout>

        <View
            style="@style/SplitH"
            android:layout_marginTop="@dimen/spacing_v_4" />

        <Button
            android:id="@+id/iStartButton"
            style="@style/TextButton"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/spacing_v_2"
            android:gravity="center"
            android:text="开始训练" />

    </LinearLayout>

    <View
        android:id="@+id/iSpacingBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_h_2" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/spacing_h_2"
        android:paddingTop="@dimen/spacing_v_2"
        android:paddingEnd="@dimen/spacing_h_2"
        android:paddingBottom="@dimen/spacing_v_2"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/iTimeText"
            style="@style/TextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="@string/app_name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/iAddressText"
            style="@style/TextTips"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/spacing_v_2"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/app_name" />


    </LinearLayout>

    <View style="@style/SplitH" />

</LinearLayout>
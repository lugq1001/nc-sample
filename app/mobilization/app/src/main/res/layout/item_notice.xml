<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/iSpacingTop"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_v_4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_h_1"
        android:layout_marginEnd="@dimen/spacing_h_1"
        android:background="@drawable/bg_item">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_h_1"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/iTitleText"
                    style="@style/TextTitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:text="@string/app_name"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/iTimeText"
                    style="@style/TextTips"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/spacing_h_1"
                    android:text="@string/app_name" />

            </LinearLayout>

            <TextView
                android:id="@+id/iContentText"
                style="@style/TextTips"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/spacing_v_1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/app_name" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/iSpacingBottom"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_v_4" />


</LinearLayout>
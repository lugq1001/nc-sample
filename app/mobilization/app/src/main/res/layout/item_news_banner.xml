<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iBannerImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/layerBlack"
        android:paddingTop="@dimen/spacing_h_0"
        android:paddingBottom="@dimen/spacing_h_0"
        android:paddingStart="@dimen/spacing_h_0"
        android:paddingEnd="@dimen/spacing_h_0"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/iTitleText"
            android:textColor="@android:color/white"
            style="@style/TextTitle" />

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/iNameText"
            style="@style/TextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_h_2"
            android:gravity="center"
            android:text="MBTI-G人格类型测试"
            android:textSize="@dimen/text_size_banner"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/iTestView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_h_2"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/iTopView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/iProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="@dimen/spacing_v_4"
                    android:indeterminate="false"
                    android:max="6"
                    android:progress="3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_v_2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/iCountdownText"
                        style="@style/TextTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="倒计时： 14:49"
                        android:textColor="@color/danger"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/iRestText"
                        style="@style/TextTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="1 / 6"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    style="@style/SplitH"
                    android:layout_marginTop="@dimen/spacing_v_3" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_h_2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/iTitleText"
                    style="@style/TextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.当出现了新潮流时，你通常"
                    android:textSize="@dimen/text_size_banner"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/iAButton"
                    style="@style/TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_v_3"
                    android:text="A 是最先去尝试的人之一"
                    android:textColor="@color/text_text_btn"
                    android:textSize="@dimen/text_size_large" />

                <Button
                    android:id="@+id/iBButton"
                    style="@style/TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A 是最先去尝试的人之一"
                    android:textColor="@color/text_text_btn"
                    android:textSize="@dimen/text_size_large" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/iResultView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_h_2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/iResultText"
                style="@style/TextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="您的性格分析结果为：IPTS"
                android:textColor="@color/primary"
                android:textSize="@dimen/text_size_banner"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_h_2">

                    <TextView
                        style="@style/TextTips"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="内向（E）" />

                    <TextView
                        style="@style/TextTips"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="外向（I）" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/iProgress1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="50"
                    android:progressTint="#ea8685" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_v_2">

                    <TextView
                        style="@style/TextTips"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="感觉（S）" />

                    <TextView
                        style="@style/TextTips"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="直觉（N）" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/iProgress2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="50"
                    android:progressTint="#546de5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_v_2">

                    <TextView
                        style="@style/TextTips"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="思考（T）" />

                    <TextView
                        style="@style/TextTips"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="情感（F）" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/iProgress3"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="50"
                    android:progressTint="#f19066" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_v_2">

                    <TextView
                        style="@style/TextTips"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="判断（J）" />

                    <TextView
                        style="@style/TextTips"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="知觉（P）" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/iProgress4"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="50"
                    android:progressTint="#3dc1d3" />

            </LinearLayout>

            <TextView
                style="@style/TextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_h_2"
                android:text="性格描述" />

            <TextView
                android:id="@+id/iContentText"
                style="@style/TextTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_v_2"
                android:text="判断（J）" />

            <TextView
                style="@style/TextTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_h_2"
                android:layout_marginBottom="@dimen/spacing_h_2"
                android:text="测试结果已上传至预备役心理资讯服务系统"
                android:textColor="@color/danger" />

            <Button
                android:id="@+id/iCloseButton"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="完成测试" />

        </LinearLayout>

    </LinearLayout>


</ScrollView>